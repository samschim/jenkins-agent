# Jenkins Configuration
JENKINS_URL=http://jenkins:8080
JENKINS_USER=admin
JENKINS_ADMIN_PASSWORD=admin  # Change in production
JENKINS_API_TOKEN=your-api-token-here

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_URL=https://api.openai.com/v1  # Can be changed for Azure OpenAI or other providers
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0
OPENAI_MAX_TOKENS=2000
OPENAI_FREQUENCY_PENALTY=0
OPENAI_PRESENCE_PENALTY=0

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=  # Optional
REDIS_DB=0

# MongoDB Configuration
MONGODB_URL=mongodb://mongodb:27017
MONGODB_DATABASE=jenkins_agent
MONGODB_USER=  # Optional
MONGODB_PASSWORD=  # Optional

# Web Configuration
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_WORKERS=4
WEB_DEBUG=false

# Security Configuration
API_SECRET_KEY=your-secret-key-here  # Change in production
CORS_ORIGINS=http://localhost,http://localhost:3000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=jenkins_agent.log

# GitHub Configuration
GITHUB_TOKEN=your-github-token-here
GITHUB_USERNAME=your-github-username
SYNC_INTERVAL=300  # 5 minutes

# Development Settings
DEBUG=false
TESTING=false
ENVIRONMENT=production  # development, testing, production